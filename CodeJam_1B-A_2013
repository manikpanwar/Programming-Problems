#include <iostream>
#include <algorithm>
 
using namespace std;
 
int main()
{
   int t;
   cin>>t;
   while(t--)
   {
       int a,n;
       cin>>a>>n;
       int sizes[101];
       for(int k =0;k<n;k++)
        cin>>sizes[k];
       sort(sizes,sizes+n);
       int count = 0;
       for(int i =0;i<n;i++)
       {
           if(a>sizes[i])
           {
               a+=sizes[i];     //Eaten
               //cout<<"a: "<<a<<" sizes[i]: "<<sizes[i]<<endl;
           }else if((2*a-1)>sizes[i])
           {
               a+= a + sizes[i] -1;     //Added another to eat i'th
               count++;
           }else
           {
               count++;         //i'th removed
           }
       }
       cout<<count<<endl;
 
   }
   return 0;
}
